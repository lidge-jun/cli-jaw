{
  "name": "cli-jaw",
  "version": "1.0.2",
  "description": "Personal AI assistant powered by 5 engines (Claude, Codex, Gemini, OpenCode, Copilot) â€” Web, Terminal, and Telegram interfaces with 107 built-in skills",
  "type": "module",
  "keywords": [
    "ai-assistant",
    "cli",
    "claude",
    "codex",
    "gemini",
    "copilot",
    "multi-agent",
    "orchestration",
    "telegram-bot",
    "browser-automation",
    "mcp"
  ],
  "author": "CLI-JAW Contributors",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lidge-jun/cli-jaw.git"
  },
  "homepage": "https://github.com/lidge-jun/cli-jaw#readme",
  "bugs": {
    "url": "https://github.com/lidge-jun/cli-jaw/issues"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "bin": {
    "cli-jaw": "dist/bin/cli-jaw.js",
    "jaw": "dist/bin/cli-jaw.js"
  },
  "files": [
    "dist/",
    "public/",
    "scripts/",
    "package.json"
  ],
  "scripts": {
    "dev": "tsx --env-file=.env server.ts",
    "postinstall": "node scripts/postinstall-guard.cjs && node dist/bin/postinstall.js",
    "clean:dist": "node -e \"const fs=require('fs');fs.rmSync('dist',{recursive:true,force:true});\"",
    "check:copilot-gap": "tsx scripts/check-copilot-gap.ts",
    "check:deps": "tsx scripts/check-deps-offline.ts",
    "i18n:registry": "tsx scripts/i18n-registry.ts",
    "check:deps:online": "bash scripts/check-deps-online.sh",
    "test": "tsx --test tests/*.test.ts tests/**/*.test.ts",
    "test:coverage": "tsx --test tests/*.test.ts tests/**/*.test.ts",
    "test:watch": "tsx --test --watch tests/*.test.ts tests/**/*.test.ts",
    "test:events": "tsx --test tests/events.test.ts",
    "test:telegram": "tsx --test tests/telegram-forwarding.test.ts",
    "test:smoke": "TEST_PORT=3457 tsx --test tests/integration/api-smoke.test.ts",
    "test:fresh-install": "tsx scripts/fresh-install-smoke.ts",
    "build": "npm run clean:dist && tsc",
    "build:frontend": "node esbuild.config.mjs",
    "watch:frontend": "node esbuild.config.mjs --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:frontend": "tsc --noEmit -p tsconfig.frontend.json",
    "prepublishOnly": "npm run build && node esbuild.config.mjs"
  },
  "dependencies": {
    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "better-sqlite3": "^11.7.0",
    "express": "^4.21.0",
    "grammy": "^1.40.0",
    "helmet": "^8.1.0",
    "node-fetch": "^3.3.2",
    "playwright-core": "^1.58.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "esbuild": "^0.27.3",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  }
}
