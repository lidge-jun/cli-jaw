{
  "name": "cli-claw-ts",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "cli-claw": "dist/bin/cli-claw.js"
  },
  "files": [
    "dist/",
    "public/",
    "package.json",
    "skills_ref/"
  ],
  "scripts": {
    "dev": "tsx --env-file=.env server.ts",
    "postinstall": "node dist/bin/postinstall.js",
    "check:copilot-gap": "node scripts/check-copilot-gap.js",
    "check:deps": "node scripts/check-deps-offline.mjs",
    "check:deps:online": "bash scripts/check-deps-online.sh",
    "test": "tsx --test tests/*.test.ts tests/**/*.test.ts",
    "test:coverage": "tsx --test tests/*.test.ts tests/**/*.test.ts",
    "test:watch": "tsx --test --watch tests/*.test.ts tests/**/*.test.ts",
    "test:events": "tsx --test tests/events.test.ts",
    "test:telegram": "tsx --test tests/telegram-forwarding.test.ts",
    "test:smoke": "TEST_PORT=3457 tsx --test tests/integration/api-smoke.test.ts",
    "build": "tsc",
    "build:frontend": "node esbuild.config.mjs",
    "watch:frontend": "node esbuild.config.mjs --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "tsc"
  },
  "dependencies": {
    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "better-sqlite3": "^11.7.0",
    "express": "^4.21.0",
    "grammy": "^1.40.0",
    "helmet": "^8.1.0",
    "node-fetch": "^3.3.2",
    "playwright-core": "^1.58.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.7.0",
    "tsx": "^4.21.0"
  }
}
